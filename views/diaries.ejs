<h1>📘 전체 일기</h1>
<a href="/diaries/new">새 일기 작성</a>
<ul>
  <% diaries.forEach(d => { %>
    <li>
      <strong><%= d.title %></strong> - <%= d.content %>

      <!-- ✏️ 수정 링크 -->
      <a href="/diaries/<%= d._id %>/edit">수정</a>

      <!-- 🗑 삭제 폼 -->
      <form action="/diaries/<%= d._id %>?_method=DELETE" method="POST" style="display:inline;">
        <button type="submit">삭제</button>
      </form>
    </li>
  <% }) %>
</ul>
